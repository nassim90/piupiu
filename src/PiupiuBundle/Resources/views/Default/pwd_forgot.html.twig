{% extends 'PiupiuBundle:Layout:layout.html.twig' %}
{% block title %}Password Forgotten{% endblock title %}
{% block body %}
    <div class="row">
        <div class="col s6">
            <form action="{{ path('piupiu_pwd_forgot') }}" method="post">
                <div>
                    <label for="email">{{ 'email' | trans }}</label>
                    <input type="email" id="email" name="_email" value="" />
                </div>
                <button type="submit">{{ 'Recover' | trans }}</button>
            </form>
        </div>
    </div>
{% endblock body %}
