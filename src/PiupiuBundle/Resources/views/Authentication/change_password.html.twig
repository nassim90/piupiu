{% extends 'PiupiuBundle:Layout:layout.html.twig' %}
{% block title %}Login{% endblock title %}
{% block body %}
    <h1>{{ 'Change your Password' | trans }}</h1>
    {% if first_login %}
        <p>{{ 'For security reasons, your password has to be changed' | trans }}</p>
    {% endif %}
    <div class="row">
        <div class="col s6">
            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
            {{ form_errors(form) }}

            {{ form_row(form.old_password) }}
            {{ form_row(form.new_password) }}

            {{ form_row(form.change) }}

            {# rest and end #}
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}
{% block script %}
{% endblock script %}